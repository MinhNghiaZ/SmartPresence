{
  "name": "smart-presence",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "vite --host",
    "dev:secure": "vite --host",
    "dev:fullstack": "concurrently \"npm run dev:https\" \"npm run dev:backend\"",
    "dev:fullstack:secure": "concurrently \"npm run dev:secure\" \"npm run dev:backend\"",
    "dev:backend": "cd backend && npm run dev",
    "build": "tsc -b && vite build",
    "build:backend": "cd backend && npm run build",
    "build:all": "npm run build && npm run build:backend",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:https": "vite preview --host",
    "preview:prod": "vite preview --config vite.config.production.ts --host",
    "start:fullstack": "concurrently \"npm run preview:https\" \"npm run start:backend:prod\"",
    "start:fullstack:prod": "concurrently \"npm run preview:prod\" \"npm run start:backend:prod\"",
    "start:backend": "cd backend && npm run start",
    "start:backend:prod": "cd backend && npm run start:prod"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "face-api.js": "^0.22.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-mkcert": "^1.17.8",
    "vite-plugin-remove-console": "^2.2.0"
  }
}
